/* miniprogram/pages/scaleList/scaleList.wxss */

.wrap {
  color: #616161;
}

.menu_wrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  width: 100vw;
  height: 86rpx;
  padding: 15rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  top: 0;
}

.menu {
  padding: 0 16rpx 10rpx;
}

.scroll_wrap {
  display: flex;
  /* font-display: row; */
  flex-wrap: nowrap;
  width: 750rpx;
  padding-top: 86rpx;
  height: 100vh;
  box-sizing: border-box;
}

.content_wrap {
  width: 200vw;
}

.list_wrap {
  width: 750rpx;
}

.item {
  width: 690rpx;
  /* height: 201px; */
  border-radius: 2rpx;
  box-shadow: 0 0 54rpx 0 #dcdcdc;
  background-color: #fff;
  box-sizing: border-box;
  margin: 30rpx auto;
  padding: 40rpx 30rpx 20rpx;
}

.cover {
  width: 690rpx;
  height: 450rpx;
  border: 1rpx solid #f00;
}

.title {
  color: #616161;
  font-size: 38rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.profile {
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 46rpx;
}

.bar_wrap {
  /* position: relative;
  border: 1rpx solid #0f0; */
  overflow: hidden;
}

.sum {
  float: right;
  padding: 2rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  background-color: #afafaf;
  color: #fff;
}

.seleted {
  color: #1aad19;
  border-bottom: 4rpx solid #1aad19;
}

.result_wrap {
  padding: 0 26rpx 20rpx;
  width: 750rpx;
  box-sizing: border-box;
  height: 100%;
  overflow-y: scroll;
}

.user_info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.avatar_wrap {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #b8cdfb;
}

.female {
  border: 2rpx solid #ffb6e3;
}

.avatar {
  width: 56rpx;
  border-radius: 50%;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  margin-left: 16rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.test_times {
  margin-left: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #9a9a9a;
}

.result {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.table_name {
  width: 290rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time {
}

.take_time {
}

.score {
  font-weight: 800;
  font-size: 32rpx;
}

.grey_bk {
  background-color: #ddd;
}

.share_btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #6093ec;
  color: #fff;
  text-align: center;
  position: fixed;
  left: 245rpx;
  bottom: 100rpx;
  box-shadow: 0 0 10rpx #6093ec;
}

.share_pop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.select_all {
  font-size: 34rpx;
  font-weight: 600;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto 20rpx;
  text-align: center;
  border-radius: 40rpx;
  box-sizing: border-box;
  background: #e1e1e1;
  color: #666;
  box-shadow: 0 0 2rpx rgba(0, 0, 0, 0);
}

.selected_all {
  color: #fff;
  background: #2098d1;
}

.share_content {
  border-radius: 8rpx;
  width: 680rpx;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  background-color: #fff;
}

.options {
  height: 680rpx;
}

.option {
  display: flex;
  align-items: center;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
}

.icon {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.btn_share {
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #6093ec;
  color: #fff;
  text-align: center;
  /* box-shadow: 0 0 10rpx #6093EC; */
}

.contact_wrap {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  z-index: 9;
  /* background: #9a9a9a; */
}

.contact_img {
  width: 80rpx;
  height: 80rpx;
}

.contact_text {
  font-size: 30rpx;
  text-align: center;
  transform: translateY(-15rpx);
  color: #3075dc;
}

.btnview {
  background-color: rgba(255,255,255,.7);
  padding: 0;
  border-radius: 0;
  overflow: visible;
  line-height: normal;
  margin: 0;
  text-align: left;
}

.btnview:after {
  display: none;
}
