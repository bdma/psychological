/* miniprogram/pages/scaleList/scaleList.wxss */

.wrap {
  color: #616161;

}

.menu_wrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 32rpx;
}

.menu {
  padding: 0 16rpx 10rpx;
}

.item {
  width: 690rpx;
  /* height: 201px; */
  border-radius: 2rpx;
  box-shadow: 0 0 54rpx 0 #dcdcdc;
  background-color: #ffffff;
  box-sizing: border-box;
  margin: 30rpx auto;
  padding: 40rpx 30rpx 20rpx;
}

.cover {
  width: 690rpx;
  height: 450rpx;
  border: 1rpx solid #f00;
}




.title {
  color: #616161;
  font-size: 38rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.profile {
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 46rpx;
}
.bar_wrap {
  /* position: relative;
  border: 1rpx solid #0f0; */
  overflow: hidden;
}

.sum {
  float:right;
  padding: 2rpx 20rpx;
  border-radius: 10rpx;
  margin-top:20rpx;
  font-size: 28rpx;
  background-color: #afafaf;
  color: #fff;

}
.seleted {
  color: #1aad19;
  border-bottom: 4rpx solid #1aad19;
}
