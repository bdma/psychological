/* miniprogram/pages/question/question.wxss */
.wrap{
    padding: 30rpx;
    background-color: #fff;
    box-sizing: border-box;
}
.progress_wrap{
    display: flex;
    align-items: center;
    margin: 20rpx auto 40rpx;
}
.progress_bar{
    flex: 1;
}
.step{
    margin-left: 30rpx;
    font-size: 30rpx;
    color: #888;
}
.question{
    margin: 50rpx 0 60rpx;
}
.aswers{
    padding: 0 30rpx;
}
.answer{
    display: flex;
    align-items: center;
    padding: 20rpx 0 30rpx;
}
.icon{
    display: inline-block;
    margin-right: 10rpx;
}
.pre_question{
    color: #6093EC;
    font-size: 34rpx;
    position: absolute;
    width: 690rpx;
    left:30rpx;
    bottom: 160rpx;
    text-align: center;
}
.pre_img{
    width:99rpx;
    margin: 10rpx auto;
    display: block;
}

.result_wrap{
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    min-height: 100vh;
    z-index: 9;
}
.title {
    font-size: 18px;
    font-weight: 500;
    color: #1ba1f0;
    margin-bottom: 15rpx;
}
.score{
    margin-bottom: 40rpx;
}
.todo{
    color: #f1f1f1
}
.share_btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #6093EC;
  color: #fff;
  text-align: center;
  position: fixed;
  left: 245rpx;
  bottom: 100rpx;
  box-shadow: 0 0 10rpx #6093EC;
}